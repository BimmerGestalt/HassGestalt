<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.bimmergestalt.hassgestalt">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HassGestalt">
        <activity android:name="io.bimmergestalt.hassgestalt.phoneui.MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <service android:name=".carapp.CarAppService" android:exported="true">
            <intent-filter>
                <action android:name="io.bimmergestalt.carconnection.service" />
            </intent-filter>
        </service>
    </application>

</manifest>